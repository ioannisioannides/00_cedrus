[MASTER]
load-plugins=pylint_django
ignore=migrations,tests
ignore-paths=^.*/migrations/.*$,^.*/tests/.*$,^.*/tests.py$
init-hook='import sys; sys.path.append("."); import os; os.environ.setdefault("DJANGO_SETTINGS_MODULE", "cedrus.settings")'

[MESSAGES CONTROL]
disable=
    C0114, ; missing-module-docstring
    C0115, ; missing-class-docstring
    C0116, ; missing-function-docstring
    R0903, ; too-few-public-methods
    R0801, ; duplicate-code (migrations often have this)
    C0301, ; line-too-long (handled by ruff)
    W0511, ; fixme
    R0901, ; too-many-ancestors (common in Django)
    C0415, ; import-outside-toplevel (common for circular imports)
    E5142, ; imported-auth-user (we know what we are doing)
    W0201, ; attribute-defined-outside-init (common in Django CBVs)
    R0401, ; cyclic-import

[FORMAT]
max-line-length=120

[DESIGN]
max-args=8
max-attributes=10
